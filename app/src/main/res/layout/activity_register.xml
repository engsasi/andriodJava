<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundregister"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="329dp"
            android:layout_height="92dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/register" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="EMAIL"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext1"
                android:hint="saiskan.mu@ku.th"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:textColorHint="#51FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="NAME"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext1"
                android:hint="engsasikan"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:paddingStart="20dp"
                android:textColorHint="#51FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="PASSWORD"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext1"
                android:hint="**********"
                android:textColor="@color/white"
                android:inputType="numberPassword"
                android:paddingStart="20dp"
                android:textColorHint="#51FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"

                android:text="COMFIRM PASSWORD"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/edittext1"
                android:hint="**********"
                android:textColor="@color/white"
                android:inputType="numberPassword"
                android:paddingStart="20dp"
                android:textColorHint="#51FFFFFF"
                android:textSize="20sp" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="Remember password"/>

            <ImageView
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/signup" />

            <TextView
                android:id="@+id/nextlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/if_you_have_alrea_registerd_click_here_to_login"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>